{
    "version": "0.1.0",
    "command": "powershell",
    "showOutput": "always",
    "suppressTaskName": false,    
    "tasks": [
        {
            "taskName": "ghc",
            "showOutput": "always",
            "isBuildCommand": true,
            "args": [
                "main.hs"
            ]
        },
        {            
            "showOutput": "always",
            "isBuildCommand": true,
            "args": [
                ".\\main.exe"
            ]
        }   
    ]
}

